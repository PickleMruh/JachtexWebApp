@model JachtexWebApp.Models.Wypozyczenium

<form method="post" asp-action="Wypozycz">
    <div class="border p-3">
        <h2 class="text-black-50 pl-3">Wypożycz jacht</h2>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col">
                    ID jachtu
                </div>
                <div class="col">
                    ID klient
                </div>
                <div class="col">
                    Początek
                </div>
                <div class="col">
                    Koniec
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <input asp-for="IdJacht" class="form-control" />
                </div>
                <div class="col">
                    <input asp-for="IdKlient" class="form-control" />
                </div>
                <div class="col">
                    <input asp-for="WypoStart" class="form-control" type="date"/>
                </div>
                <div class="col">
                    <input asp-for="WypoKoniec" class="form-control" type="date"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-100" value="Wypożycz"/>
                </div>
                <div class="col">
                    <a class="btn btn-danger w-100" asp-controller="Home" asp-action="Index">Anuluj</a>
                </div>
            </div>
        </div>
    </div>

</form>